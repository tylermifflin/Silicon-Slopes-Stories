<!-- set up login.handlebars to connect to login.js -->
<div class="row">
  <div class="col-md-6">
    <h2>Login</h2>

    <form class="form login-form">
      <div class="form-group">
        <label for="email-login">Email</label>
        <input class="form-input" id="email-login" type="text" />
      </div>
      <div class="form-group">
        <label for="password-login">Password</label>
        <input class="form-input" id="password-login" type="password" />
      </div>
      <div class="form-group">
      <button type="submit" class="btn btn-primary">Login</button>
      </div>
    </form>
  </div>

<!-- set up signup.handlebars to connect to signup.js -->
  <div class="col-md-6">
    <h2>Signup</h2> 

    <form class="form signup-form">
     <div class="form-group">
        <label for="name-signup">User Name</label>
        <input class="form-input" id="name-signup" type="text" />
      </div>
     <div class="form-group">
        <label for="email-signup">Email</label>
        <input class="form-input" id="email-signup" type="text" />
      </div>
      <div class="form-group">
        <label for="password-signup">Password</label>
        <input class="form-input" id="password-signup" type="password" />
      </div>
      <div class="form-group">
      <button type="submit" class="btn btn-primary">Sign Up</button>
    </div>
    </form>
   </div> 
</div>

<script src="./js/login.js"></script>
